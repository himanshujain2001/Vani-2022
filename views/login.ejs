  <body class="text-center">

    <!-- Javascript for Eye in Password -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<main class="form-login">
    <h1 class="h3 mb-3 fw-normal">Please login</h1>

   <form action="/login" method="POST">
    <div class="form-floating">
      <div class="input-container">
      <i class="fas fa-user icon"></i>
      <input type="text" class="form-control input-field" name="username" placeholder="USERNAME" autocomplete="off" autofocus required>
    </div>
    </div>
    <div class="form-floating">
      <div class="input-container">
      <i class="fas fa-lock icon"></i>
      <input type="password" class="form-control input" id="password-field" name="pswd" placeholder="PASSWORD" autocomplete="off" required>
      <i id="toggle_pwd" class="fas fa-eye eyeicon toggle-password"></i>
    </div>
    </div>
        <div class="g-recaptcha" data-sitekey="<%= key %>"></div>
        <button class="w-100 btn btn-lg btn-primary button" type="submit">Log in</button>
    </form>
    <p class="paragraph">Copyright Â© <%=year%> Vani. All Rights Reserved</p>

</main>

<!-- Eye Javascript -->
<script type="text/javascript">
$(function () {
            $("#toggle_pwd").click(function () {
                $(this).toggleClass("fa-eye fa-eye-slash");
               var type = $(this).hasClass("fa-eye-slash") ? "text" : "password";
                $("#password-field").attr("type", type);
            });
        });
</script>

  </body>
</html>
