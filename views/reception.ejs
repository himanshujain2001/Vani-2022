<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ReceptionImages</title>

    <!-- Font Family -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Playfair+Display&family=Roboto&display=swap" rel="stylesheet">

    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/9d3731f657.js" crossorigin="anonymous"></script>

    <!-- Custom styles for this template -->
    <link  href="css/reception.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="icon" href="images/tsp-174-modified.png">
  </head>
  <body>
<div id="loaderId">
  <p class="wait">Please Wait...</p>
  <div></div>
</div>
    <%- include('partials/header') %>

  <div class="imageSection container-fluid">
       <h1 class="heading">Reception Images</h1>
     <% uploadReception.forEach(function(imageToUpload){ %>
       <div class="imageDiv">
        <img class="receptionImages" src="receptionimages/<%=imageToUpload%>" loading="lazy" alt="" width="220px" height="180px">
       </div>
     <% }); %>
  </div>

    <!-- Footer -->
    <section class="footer">

    <div class="footer">
      <div class="container-fluid">
    <div class="row">

      <div class="col-lg-4 paragraph">
        <p>Copyright Â© <%=year%> Vani. All Rights Reserved</p>
      </div>

      <div class="col-lg-4 paragraph">
        <p>Website designed, developed & hosted by <br>HIMANSHU JAIN</p>
      </div>

      <div class="col-lg-2 paragraph">
        <p>Terms of Service</p>
      </div>
      <div class="col-lg-2 paragraph">
        <p>Privacy Policy</p>
      </div>
      <div class="col-lg-2 paragraph">
        <button onclick="topFunction()" type="" class="scroll" name="button">
          <img src="https://www.cowin.gov.in/assets/images/scroll-top.svg" class="img-fluid" alt="">
        </button>
      </div>
      </div>
    </div>

    </div>

    </section>

    <!-- Functionality of Scroll to top button -->
    <script>

     // Scroll To Top

      function topFunction() {
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    }

    // Loader

    var loader=document.getElementById("loaderId");
    window.addEventListener("load",function(){
      loader.style.display="none";
    });
    </script>

  </body>
</html>
